<Window x:Class="Nonogramer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nonogramer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="7*"/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="1">
			<Label Content="Poziom"/>
			<TextBox Name="tbLevel">100</TextBox>
		</StackPanel>

		<Canvas Name="mainCanv" Background="PaleGoldenrod">
			<Rectangle Width="100" Height="100" Fill="Black" Margin="10, 20" />
		</Canvas>

	</Grid>

</Window>
